<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>
  <log4net xsi:noNamespaceSchemaLocation="http://csharptest.net/downloads/schema/log4net.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <logger name="FileAppender">
      <level value="ALL"/>
      <appender-ref ref="FileAppender"/>
    </logger>
    <logger name="MailAppender">
      <level value="ALL"/>
      <appender-ref ref="SmtpAppender"/>
    </logger>
    <logger name="SqlServerAppender">
      <level value="ALL"/>
      <appender-ref ref="AdoNetAppender"/>
    </logger> 
    <!--文本文件记录方式(记录出错日志)-->
    <appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
      <staticLogFileName value="false"/> <!--是否使用静态文件名 true:需要在file里面制定文件名;false:只需要指定路径，文件名由datePattern指定-->
      <file value="App_Data/Error/"/> <!--文件路径-->
      <rollingStyle value="Composite"/>
      <datePattern value="yyyy-MM-dd/yyyy-MM-dd HH&quot;.txt&quot;"/>
      <maxSizeRollBackups value="-1"/>
      <maximumFileSize value="100kb"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [%p]=========%n   %m%n%n" />
      </layout>
    </appender> 
    <!--邮件日志-->
    <appender name="SmtpAppender" type="log4net.Appender.SmtpAppender">
      <authentication value="Basic"/>
      <to value="602117818@qq.com"/>
      <from value="wang.yang@etaostars.com"/>
      <username value="wang.yang@etaostars.com"/>
      <password value="wy3471428"/>
      <smtpHost value="smtp.exmail.qq.com"/>
      <port value="25"/>
      <subject value="网站报错"/>
      <lossy value="true" />
      <bufferSize value="512"/>
      <evaluator type="log4net.Core.LevelEvaluator">
        <threshold value="ALL"/>
      </evaluator>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [%p]=========%n   %m%n" />
      </layout>  
    </appender>
    <!--数据库记录方式(用于记录操作日志)-->
    <appender name="AdoNetAppender" type="log4net.Appender.AdoNetAppender">
      <bufferSize value="0"/>
      <connectionType value="System.Data.SqlClient.SqlConnection,System.Data,Version=2.0.0.0, Culture=neutral,PublicKeyToken=b77a5c561934e089" />
      <connectionString value="Data Source=.;Initial Catalog=DbTest;User ID=sa;Password=123"/>
      <commandText value="Insert into [log1](name,remark,logDate)values(@name,@remark,@logDate)"/>
      <parameter>
        <parameterName value="@name"/>
        <dbType value="String"/>
        <size value="50"/>
        <layout type="EasyOa.Common.MyLayout">
          <conversionPattern value="%property{name}"/>
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@remark"/>
        <dbType value="String"/>
        <size value="500"/>
        <layout type="EasyOa.Common.MyLayout">
          <conversionPattern value="%property{remark}"/>
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@logDate"/>
        <dbType value="DateTime"/>
        <layout type="log4net.Layout.RawTimeStampLayout"/>
      </parameter>
    </appender>
  </log4net>
</configuration>
