<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/icon.css" rel="stylesheet" />
    <link href="~/Content/css/main.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    @RenderSection("header",false)
</head>
<body>
    <header>
        <!--顶部提醒-->
        <div class="top_tips">
            <div class="toptips_wrap">
                <strong>提醒：</strong>
                <span>近期多家网站用户资料被泄露，为了您的账户安全，建议您立即修改密码信息</span>
                <span class="btn_close">×</span>
            </div>
        </div>
        <!--顶部导航-->
        <div class="topnav">
            <!--右侧导航-->
            <div class="topnav_wrap">
                <div class="user_zone">
                    <div class="unlogin">
                        <ul class="linkwrap">
                            <li>
                                <a href="#" class="link">登陆用户</a>
                                <span class="link_split"></span>
                            </li>
                            <li>
                                <a href="#" class="link">客服<i class="iconfont" id="kefu" style="font-size: 12px;">&#xe603;</i></a>
                            </li>
                            <li>
                                <span class="link_split"></span>
                                <a href="#" class="link">注册</a>
                                <span class="link_split"></span>
                            </li>
                            <li><a href="#" class="link">English</a></li>
                        </ul>
                    </div>
                </div>
                <!--左侧导航-->
                <ul class="linkwrap">
                    <li>
                        <a href="#" class="link">财付通首页</a>
                        <span class="link_split"></span>
                    </li>
                </ul>
            </div>
        </div>
        <!--主导航-->
        <div class="mainnav">
            <div class="mainnav_wrap">
                <div class="logo">
                    <img src="~/Content/imgs/logo.png" style="width: 247px; height: 42px" />
                </div>
                <nav>
                    <ul class="mainnav_link">
                        <li >
                            <a href="#" id="mainnav_link_sel">账户</a>
                        </li>
                        <li>
                            <a href="#">理财通</a>
                        </li>
                        <li>
                            <a href="#">生活</a>
                        </li>
                        <li>
                            <a href="#">银行</a>
                        </li>
                        <li>
                            <a href="#">企业</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    @RenderBody()
</body>
</html>
<script type="text/javascript">
    $(function () {
        var alll_inks = $(".mainnav_link a");
        var current_link = alll_inks.first();
        alll_inks.click(function () {
            current_link.attr("id", "");
            current_link = $(this).attr("id", "mainnav_link_sel");
        });
    });
</script>