@{
    Layout = "~/Views/Shared/_HrLayout.cshtml";
}
@* 员工信息添加 *@
@section Header{
    <link href="~/Content/css/hr/hr_maintain.css" rel="stylesheet" />
    <link href="~/Content/css/hr/hr_maintain_index.css" rel="stylesheet" />
    <link href="~/Content/css/calendar.css" rel="stylesheet" />
}
<style type="text/css">
    #ico_user {
        background-color: #E1E6EB;
        border-color: #C9D4DF;
    }

    #employ_add {
        background-color: #f3f3f3;
        color: #4e4e4e;
    }
</style>
@Html.Partial("Partial_HrMaintain")
<div class="data_nav">
    <div class="data_title">
        <h2>员工信息</h2>
    </div>
    <div class="data_con">
        <form name="frm1">
            <div class="form_line">
                <label class="label" for="name"> 姓 名 : </label>
                <div class="element">
                    <input type="text" name="name" class="text" tabindex="1" size="30"/>
                </div>
            </div>
            <div class="form_line">
                <label class="label" for="sex"> 性 别 : </label>
                <div class="element">
                    男 <input type="radio" name="sex" checked="checked"/>&nbsp;&nbsp;&nbsp;&nbsp;
                    女 <input type="radio" name="sex" />
                </div>
            </div>
            <div class="form_line">
                <label class="label" for="birthday">出生年月 :</label>
                <div class="element">
                    <input type="text" name="birthday" id="birthday" class="text"/>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="~/Scripts/Calendar.js"></script>
<script type="text/javascript">
    $("#birthday").Calendar();
</script>