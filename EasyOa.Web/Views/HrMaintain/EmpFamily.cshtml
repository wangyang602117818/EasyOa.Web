@{
    Layout = "~/Views/Shared/_HrLayout.cshtml";
}
@section Header
{
    <link href="~/Content/css/hr/hr_maintain.css" rel="stylesheet" />
    <link href="~/Content/css/hr/hr_maintain_form.css" rel="stylesheet" />
    <link href="~/Content/date/calendar.css" rel="stylesheet" />
}
<style type="text/css">
    #family_add {
        background-color: #f3f3f3;
        color: #4e4e4e;
    }

    #ico_family {
        background-color: #E1E6EB;
        border-color: #C9D4DF;
    }
</style>
@Html.Partial("Partial_HrMaintain")
<div class="data_nav">
    <div class="data_title">
        <h2>家庭成员</h2>
    </div>
    <div class="data_con">
        <div class="photo">
            <img src="" style="border: 0px solid #ccc" />
        </div>
        <form name="frm1">
            <div class="form_line">
                <label class="label" for="EmpName">员工姓名 : </label>
                <div class="element">
                    <input type="text" name="EmpName" class="text" tabindex="1" size="30" placeholder="" />
                    <input type="hidden" name="EmployeeId" id="EmployeeId" />
                </div>
            </div>
            <div class="form_line">
                <div class="form_line_left">
                    <label class="label">姓 名 :</label>
                    <div class="element">
                        <input type="text" name="Name" class="text" size="18" placeholder="家庭成员姓名" />
                    </div>
                </div>
                <div class="form_line_right">
                    <label class="label" for="RelationCode">与本人关系 :</label>
                    <div class="element">
                        <select name="RelationCode" style="width: 150px">
                            <option value="01">父子</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form_line">
                <div class="form_line_left">
                    <label class="label" for="ContactPhone">联系电话 :</label>
                    <div class="element">
                        <input type="text" name="ContactPhone" class="text" size="25" />
                    </div>
                </div>
                <div class="form_line_right">
                    <label class="label" for="Birthday">出生年月 :</label>
                    <div class="element">
                        <input type="text" name="Birthday" id="Birthday" class="text date" size="15" />
                    </div>
                </div>
            </div>
            <div class="form_line">
                <label class="label" for="ContactAddress">联系地址 :</label>
                <div class="element">
                    <input type="text" name="ContactAddress" class="text" size="50" />
                </div>
            </div>
            <div class="form_line">
                <label class="label" for="Company">工作单位 :</label>
                <div class="element">
                    <input type="text" name="Company" class="text" size="40" />
                </div>
            </div>
            <div class="form_line">
                <label class="label">政治面貌 :</label>
                <div class="element">
                    <select name="PoliticalCode" style="width: 150px">
                        <option value="01">团员</option>
                        <option value="02">党员</option>
                    </select>
                </div>
            </div>
            <div class="split_hr"></div>
            <div class="form_line form_line_bottom">
                <input type="button" value="提 交" class="form_button submit_button" />
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    $("#Birthday").Calendar();
</script>



