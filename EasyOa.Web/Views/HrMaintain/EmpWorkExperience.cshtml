@{
    Layout = "~/Views/Shared/_HrLayout.cshtml";
}
@section Header
{
    <link href="~/Content/css/hr/hr_maintain.css" rel="stylesheet" />
    <link href="~/Content/css/hr/hr_maintain_form.css" rel="stylesheet" />
    <link href="~/Content/date/calendar.css" rel="stylesheet" />
}
<style type="text/css">
    #experience_add {
        background-color: #f3f3f3;
        color: #4e4e4e;
    }

    #ico_experience {
        background-color: #E1E6EB;
        border-color: #C9D4DF;
    }
</style>
@Html.Partial("Partial_HrMaintain")
<div class="data_nav">
    <div class="data_title">
        <h2>工作经历</h2>
    </div>
    <div class="data_con">
        <div class="photo">
            <img src="" style="border: 0px solid #ccc" />
        </div>
        <form name="frm1">
            <div class="form_line">
                <label class="label" for="EmpName">员工姓名 : </label>
                <div class="element">
                    <input type="text" name="EmpName" class="text" tabindex="1" size="30" placeholder="" />
                    <input type="hidden" name="EmployeeId" id="EmployeeId" />
                </div>
            </div>
            <div class="form_line">
                <div class="form_line_left">
                    <label class="label" for="CompanyName">公司名称 :</label>
                    <div class="element">
                        <input type="text" name="CompanyName" class="text" size="25" />
                    </div>
                </div>
                <div class="form_line_right">
                    <label class="label" for="JobTitle">职位名称 :</label>
                    <div class="element">
                        <input type="text" name="JobTitle" class="text" size="18" />
                    </div>
                </div>
            </div>
            <div class="form_line">
                <div class="form_line_left">
                    <label class="label" for="WorkExpStartDate">开始时间 :</label>
                    <div class="element">
                        <input type="text" name="WorkExpStartDate" class="text date" size="15" />
                    </div>
                </div>
                <div class="form_line_right">
                    <label class="label" for="WorkExpEndDate">结束时间 :</label>
                    <div class="element">
                        <input type="text" name="WorkExpEndDate" class="text date" size="15" />
                    </div>
                </div>
            </div>
            <div class="form_line">
                <label class="label" for="LeaveReason">离职原因 :</label>
                <div class="element">
                    <textarea name="LeaveReason" rows="5" cols="60" class="text"></textarea>
                </div>
            </div>
            <div class="split_hr"></div>
            <div class="form_line form_bottom">
                <input type="button" value="提 交" class="form_button submit_button" />
            </div>
        </form>
    </div>
</div>
