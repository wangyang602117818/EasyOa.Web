        meun_li.mouseover(function () {
            $(this).children(".nav_sub").show();
        });
        meun_li.mouseout(function () {
            $(this).children(".nav_sub").hide();
        })
        //导航信息栏
        var page_nav = $(".page_nav a");
        var curr_nav = page_nav.first();
        page_nav.mouseover(function () {
            var curr = $(this);
            if (curr.hasClass("on")) {
                curr.css("backgroundColor", "#fff");
                curr.click(function () { return false; })
            }
        })

    });
</script>
